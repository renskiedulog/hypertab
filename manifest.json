{
  "manifest_version": 3,
  "name": "HyperTab",
  "version": "1.0",
  "description": "A Chrome extension built with Vite + React",
  "action": {
    "default_popup": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["topSites", "storage", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["script/inject-audio.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "host_permissions": ["https://www.google.com/*", "https://t1.gstatic.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "script/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["script/youtube-analyzer.js", "script/youtube-audio-probe.js"]
    }
  ]
}
